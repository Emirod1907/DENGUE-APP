<% include partials/_header %>

<div class="conteiner mt-5">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/update/<%= data.id %>" method="post">
                        <div class="form-group">
                            <input type="text" name="nombre" value="<%= data.nnombre %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="apellido" value="<%= data.apellido %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="direccion" value="<%= data.direccion %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="departamento" value="<%= data.departamento %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="number" name="edad" value="<%= data.edad %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="genero" value="<%= data.genero %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="enum" name="criticidad" value="<%= data.criticidad %>" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Actualizar paciente
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<% include partials/_footer %>